@page
@inject IConfiguration Config
@model QuranSchool.Models.PasswordResetModel
@{
    <img height="300" width="300" src="https://madrasacloud.com/images/logo/logo.svg"/>
    <h1>Hi @Model.Name,</h1>
    <h3>You recently requested to reset your password for your <b>@Model.Email</b> account. Click the link below to reset it. This password reset link is only valid for the next 24 hours.</h3>


    <a href="https://madrasacloud.com/auth/reset?token=@Model.Token&email=@Model.Email">Reset my password</a>
    <h3>If the link doesn't work. you can use reset token to manually reset your password.</h3>
    <h3>
        <b>@Model.Token</b>
    </h3>
}